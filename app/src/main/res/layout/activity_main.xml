<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabhu.textrepeater.MainActivity"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/labelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Repeater"
                android:textAlignment="center"
                android:textColor="#00EAFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by TheLordTech"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#BCADF3"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end">

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end" />


    </LinearLayout>
    <EditText
        android:id="@+id/inputext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="15dp"
        android:hint="Enter Text"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/inputlimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="15dp"
        android:hint="Enter Limit"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/newLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Line"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:theme="@style/MyCheckBox"/>
        <CheckBox
            android:id="@+id/addIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Index"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:theme="@style/MyCheckBox"/>

        <Button
            android:id="@+id/generatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:text="GENERATE TEXT"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>



    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Outputdisply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff" />

            <LinearLayout
                android:id="@+id/btnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="2dp">

                <Button
                    android:id="@+id/Cpybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="copy"/>

                <Button
                    android:id="@+id/sharebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHARE" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>







</LinearLayout>
